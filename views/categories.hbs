<div class="row">
    <div class="col-md-12 table-responsive">
            <h2>Categories
            <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
            </h2>
            <hr />    
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Category ID</th>
                        <th scope="col">Category Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td><a href="/posts?category={{id}}">{{id}}</a></td>
                        <td><a href="/posts?category={{id}}">{{category}}</a></td>
                        <a href="/categories/delete/{{id}}" class="btn btn-danger">Remove</a>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
    </div>
    {{#unless posts}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
